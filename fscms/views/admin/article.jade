extends ../public/alayout
block content
    table(class="table")
        tr
            td id
            td 文章名
            td 文章时间
            td 文章浏览量
            td 作者
            td 状态
            td 操作
        -each article in articles
            tr
                td
                td #{article.articlename}
                td #{article.articledate}
                td #{article.articleview}
                td #{article.articlename}

                -if(article.articlestate== 1)
                    td  未审核
                -else if(article.articlestate== 2)
                    td 以上线
                td
                    -if(article.articlestate== 1)
                        a(href="article/agree/" + article._id)
                            button(value="审核通过" class="btn btn-primary btn-sm") 审核通过
                            &nbsp
                    -else if(article.articlestate== 2)
                        a(href="article/disagree/" + article._id)
                            button(value="下线" class="btn btn-danger btn-sm") 下线
                            &nbsp
                    a(href="article/change/" + article._id)
                        button(value="修改" class="btn btn-warning btn-sm") 修改
                        &nbsp
                    a(href="article/del/" + article._id)
                        button(value="删除" class="btn btn-danger btn-sm") 删除
                        &nbsp

