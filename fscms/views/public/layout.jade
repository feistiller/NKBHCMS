                                    a(href='../../../users/login')
                                        span(data-hover='login') 登录
                                li
                                    a(href='#Contact')
                                        span(data-hover='Contact') 联系我们
                        // script-for-menu
                        script.
                            $( "span.menu" ).click(function() {
